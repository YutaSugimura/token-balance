{
  "version": "0.1.1",
  "name": "@asset-projects/token-balance",
  "description": "A library for retrieving the amount of ERC20 tokens held by a specific address.",
  "author": "@asset-projects",
  "bugs": {
    "url": "https://github.com/asset-project/token-balance/issues"
  },
  "homepage": "https://github.com/asset-project/token-balance#readme",
  "keywords": [
    "asset-projects",
    "ethereum",
    "ERC20",
    "token",
    "list",
    "mainnet",
    "optimism",
    "arbitrum",
    "polygon",
    "binance",
    "balance"
  ],
  "license": "MIT",
  "main": "lib/src/index.js",
  "module": "esm/src/index.js",
  "types": "lib/src/index.d.ts",
  "typings": "lib/src/index.d.ts",
  "files": [
    "lib/",
    "esm/"
  ],
  "scripts": {
    "start": "ts-node test/index.ts",
    "test": "jest",
    "type-check": "tsc --pretty --noEmit",
    "test-all": "yarn type-check && yarn test",
    "lint": "eslint . && prettier --check .",
    "format": "eslint --fix . && prettier --write .",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs && yarn build:es",
